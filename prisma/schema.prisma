generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")          
  directUrl = env("DATABASE_URL_DIRECT")   
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  
  // Model preference: "auto" | "gpt" | "llama"
  modelPreference String @default("auto")

  chats      Chat[]
  summaries  PdfSummary[]
  plans      StudyPlan[]
  knowledge  Knowledge[]
  settings   UserSettings?
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String
  reply     String
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model PdfSummary {
  id        Int      @id @default(autoincrement())
  content   String
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model StudyPlan {
  id        Int      @id @default(autoincrement())
  subject   String
  plan      String
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

// Knowledge base for RAG
model Knowledge {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  embedding String?  @db.Text  // JSON string of embedding vector
  source    String   @default("manual") // "pdf", "manual", "feedback"
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

// User settings for AI preferences
model UserSettings {
  id              Int      @id @default(autoincrement())
  modelPreference String   @default("auto") // "auto", "gpt", "llama"
  useKnowledge    Boolean  @default(true)
  userId          Int      @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
