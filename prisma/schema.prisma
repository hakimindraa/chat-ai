generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")          
  directUrl = env("DATABASE_URL_DIRECT")   
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())

  chats     Chat[]
  summaries PdfSummary[]
  plans     StudyPlan[]
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String
  reply     String
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model PdfSummary {
  id        Int      @id @default(autoincrement())
  content   String
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model StudyPlan {
  id        Int      @id @default(autoincrement())
  subject   String
  plan      String
  userId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
